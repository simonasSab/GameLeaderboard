{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "MongoDb": "...",
    "Entity": "..."
  },

  "Serilog": {

    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],

    "MinimumLevel": "Debug",

    "WriteTo": [

      { "Name": "Console" },

      {

        "Name": "File",

        "Args": {
          "path": "logs/log_api.txt",
          "rollingInterval": "Day"
        }

      }

    ],

    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ],

    "Properties": {

      "Application": "YourAppName"

    }

  }
}
